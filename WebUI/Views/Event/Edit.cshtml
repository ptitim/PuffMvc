@using Common.Resources;

@model Service.DTO.EventDto
@{
    ViewData["Title"] = "Edit";
}
<h4>Edition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="@CommonResources.RichTextArea"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="datetime" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resume" class="control-label"></label>
                <textarea asp-for="Resume" class="form-control"></textarea>
                <span asp-validation-for="Resume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberMaxOfParticipant" class="control-label"></label>
                <input asp-for="NumberMaxOfParticipant" type="number" class="form-control" />
                <span asp-validation-for="NumberMaxOfParticipant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RendezVousPoint" class="control-label col-sm-4"></label>
                <input asp-for="RendezVousPoint" class="form-control col-sm-8" />
                <span asp-validation-for="RendezVousPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsPublished" class="control-label"></label>
                <input type="checkbox" asp-for="IsPublished" class="form-control" />
                <span asp-validation-for="IsPublished" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <input asp-for="Id" class="form-control" type="hidden" />
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
