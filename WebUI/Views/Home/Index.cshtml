@model List< Service.DTO.EventListDto>;

@{
    ViewData["Title"] = "Home Page";
}

@foreach (var eventLine in Model)
{

    <div class="row">
        <h3 class="home-city-title">
            @eventLine.MovieName
        </h3>
    </div>

    <div class="row">
        @foreach (var event_ in eventLine.Events)
        {
            <div class="col-xs-6 col-sm-4">
                <div class="home-event-container form-group">

                    <div class="col-xs-12 col-sm-12 home-event-name">
                        <p>@event_.Name</p>
                    </div>

                    <div class="col-xs-12 col-sm-3">
                        @Html.DisplayNameFor(model => event_.Date)
                    </div>

                    <div class="col-xs-offset-1 col-xs-11 col-sm-offset-0 col-sm-9">
                        @Html.DisplayFor(model => event_.Date)
                    </div>

                    <div class="col-xs-12 col-sm-10">
                        <p class="property-title">@Html.DisplayNameFor(model => event_.NumberMaxOfParticipant)</p>
                    </div>
                    @if (event_.NumberMaxOfParticipant > 0)
                    {

                        <div class="col-xs-2">
                            @string.Format("{0}/{1}", event_.NumberOfParticipant, event_.NumberMaxOfParticipant)
                        </div>
                    }
                    else
                    {
                        <div class="col-xs-2">
                            @event_.NumberOfParticipant
                        </div>
                    }
                    <div class="col-xs-12">
                        <p class="property-title">@Html.DisplayNameFor(model => event_.Resume)</p>
                    </div>

                    <div class="col-xs-offset-1 col-xs-11">
                        @event_.Resume
                    </div>

                </div>
            </div>
        }
    </div>

    @*@Html.DisplayFor(model => eventLine)*@
}
